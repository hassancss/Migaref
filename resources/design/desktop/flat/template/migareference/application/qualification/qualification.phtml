function loadOptions(type, targetId, selectedValue) {
    var $options = $("#" + targetId);
    $options.empty().append('<option value="">Loading...</option>');
    var key = 'feature';
    if (type === '2' || type === 2 || type === 'folder') key = 'folder';

    $.ajax({
        url: "<?php echo $this->getUrl('migareference/qualification_qualification/loadfeatures') ?>",
        type: "POST",
        dataType: "json",
        data: { type: key }, 
        
        success: function(resp) {
            $options.empty().prop('disabled', false);

            if (resp && resp.success && Array.isArray(resp.options)) {
                if (resp.options.length === 0) {
                    $options.append('<option value="">-- No items --</option>');
                } else {
                    resp.options.forEach(function(opt) {
                        var v = (opt.value ?? '').toString();
                        var l = (opt.label ?? '--').toString();
                        $options.append('<option value="' + v + '">' + l + '</option>');
                    });
                }
                if (selectedValue !== undefined && selectedValue !== null && selectedValue !== '') {
                    $options.val(String(selectedValue));
                }
            } else {
                $options.append('<option value="">-- Error loading --</option>');
                console.error('Options API error:', resp && resp.message ? resp.message : resp);
            }
        },
        error: function(xhr) {
            $options.empty().prop('disabled', false)
                .append('<option value="">-- Network error --</option>');
            console.error('AJAX failed:', xhr);
        }
    });
}

